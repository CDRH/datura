#!/usr/bin/env ruby

require "datura"

require "json"
require "rest-client"
require "yaml"

params = Datura::Parser.es_set_schema_params
options = Datura::Options.new(params).all

begin
  url = File.join(options["es_path"], options["es_index"], "_mapping", "?pretty=true")
  res = RestClient.get(url)
  puts res.body
  puts "environment: #{options["environment"]}"
  puts "url: #{url}"
rescue => e
  puts "Error: #{e.response}"
end
